# ============================================
# AgentChord Visual Builder Configuration
# ============================================

# Application
ENVIRONMENT=development
DEBUG=false

# Database (SQLite for dev, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./tool_hub.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/agentchord
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Security (REQUIRED FOR PRODUCTION)
# Generate strong random values:
#   openssl rand -hex 32
SECRET_KEY=change-me-in-production
JWT_SECRET=change-me-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Redis (REQUIRED FOR PRODUCTION)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=change-me-strong-password

# PostgreSQL (REQUIRED FOR DOCKER DEPLOYMENT)
# Generate strong random password:
#   openssl rand -base64 32
POSTGRES_USER=agentchord
POSTGRES_PASSWORD=change-me-strong-password
POSTGRES_DB=agentchord

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=1
# Set to false for non-primary workers in horizontal scaling (only one worker should run scheduler)
SCHEDULER_ENABLED=true

# LLM Providers
OPENAI_API_KEY=
OPENAI_BASE_URL=
ANTHROPIC_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434
GEMINI_API_KEY=
DEFAULT_LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT=120.0
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# Embedding Provider for RAG
# Provider options: "openai", "ollama", "hash" (fallback)
# Falls back to hash-based (non-semantic) if no API key configured
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
